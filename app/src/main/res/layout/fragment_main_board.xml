<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bgGradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReelMakerAI"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnCreateVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Video"
        android:drawableStart="@drawable/ic_create_video"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_primary"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnCollage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collage"
        android:drawableStart="@drawable/ic_collage"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_secondary"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvShowcase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Showcase Assets"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"/>

    <!-- Showcase asset previews can be added here -->

</LinearLayout>
