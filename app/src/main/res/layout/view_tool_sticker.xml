<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stickerToolContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/toolBackground"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sticker Tools"
        android:textColor="@color/toolTextPrimary"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnAddSticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sticker"
        android:background="@null"
        android:textColor="@color/toolTextPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnRemoveSticker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Sticker"
        android:background="@null"
        android:textColor="@color/toolTextPrimary"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnStickerOpacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Opacity"
        android:background="@null"
        android:textColor="@color/toolTextPrimary" />
</LinearLayout>
