<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="8dp">

        <!-- Export Button -->
        <Button
            android:id="@+id/btnExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Export"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="12dp" />

        <!-- Ad Placeholder -->
        <View
            android:id="@+id/ad_placeholder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btnExport"
            android:layout_marginTop="4dp"
            android:background="#333333" />

        <!-- Video Preview Container -->
        <FrameLayout
            android:id="@+id/videoContainer"
            android:layout_width="240dp"
            android:layout_height="426dp"
            android:layout_below="@id/ad_placeholder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <VideoView
                android:id="@+id/videoPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Duration Display -->
        <TextView
            android:id="@+id/videoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00 / 00:00"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_below="@id/videoContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp" />

        <!-- Video Control Row -->
        <RelativeLayout
            android:id="@+id/videoControlRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoDuration"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_play"
                android:contentDescription="Play/Pause" />

            <ImageButton
                android:id="@+id/btnMaximize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_maximize"
                android:contentDescription="Maximize Video" />
        </RelativeLayout>

        <!-- Frame Control Row -->
        <LinearLayout
            android:id="@+id/frameControlRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/videoControlRow"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/btnAddVideo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_add"
                android:contentDescription="Add Video"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frameStrip"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />
        </LinearLayout>

        <!-- Main Toolbar -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainToolBar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@id/frameControlRow"
            android:layout_marginTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

        <!-- Sub Toolbar -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subToolBar"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@id/mainToolBar"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />

    </RelativeLayout>
</layout>
