<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voiceFxToolContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/toolBackground"
    android:gravity="center_horizontal">

    <TextView android:text="Voice FX" style="@style/ToolTitle" />

    <Button android:id="@+id/btnVoiceRobot" android:text="Robot" style="@style/ToolButton" />
    <Button android:id="@+id/btnVoiceEcho" android:text="Echo" style="@style/ToolButton" />
    <Button android:id="@+id/btnVoicePitch" android:text="Pitch Shift" style="@style/ToolButton" />
</LinearLayout>
