<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photoEditorRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/photoEditorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Editor"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/photoPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/photoEditorTitle"
        app:layout_constraintBottom_toTopOf="@id/photoEditorActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:id="@+id/photoEditorActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Filter"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnExportPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Export" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
