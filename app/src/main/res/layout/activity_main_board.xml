<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- App Title -->
        <TextView
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="#4E342E"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- CREATE NEW Section -->
        <TextView
            android:text="@string/create_new"
            android:textSize="16sp"
            android:textColor="#4E342E"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#009688"
            android:layout_marginBottom="12dp" />

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:id="@+id/btnVideo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_video"
                    android:backgroundTint="#E91E63"
                    app:tint="#FFFFFF" />
                <TextView
                    android:text="@string/video"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPhoto"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_photo"
                    android:backgroundTint="#FF9800"
                    app:tint="#FFFFFF" />
                <TextView
                    android:text="@string/photo"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCollage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_collage"
                    android:backgroundTint="#FF9800"
                    app:tint="#FFFFFF" />
                <TextView
                    android:text="@string/collage"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Invite and Share Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share" />
        </LinearLayout>

        <!-- What's New -->
        <TextView
            android:id="@+id/whatsNewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whats_new"
            android:textSize="16sp"
            android:textColor="#4E342E"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/asset_bloom"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/asset_portrait"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/asset_new" />
        </LinearLayout>

        <!-- Dynamic UI Container -->
        <FrameLayout
            android:id="@+id/dynamicUiContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Changelog -->
        <TextView
            android:id="@+id/changelogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changelog_placeholder"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Summary -->
        <TextView
            android:id="@+id/summaryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/summary_placeholder"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Offline Banner -->
        <LinearLayout
            android:id="@+id/offlineBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCDD2"
            android:padding="8dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="#B71C1C"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/offlineMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offline_message"
                android:textColor="#B71C1C"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Refresh Overlay -->
        <View
            android:id="@+id/refreshOverlay"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#009688"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Engagement Overlay -->
        <View
            android:id="@+id/engagementOverlay"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#FF9800"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Fragment Container -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
